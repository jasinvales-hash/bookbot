def get_book_text(filepath):
    with open(filepath) as f:
       return f.read()

def get_num_words(filepath):
    str_f = get_book_text(filepath)
    all_words = str_f.split()
    for num_words in range(len(all_words)):
        num_words = num_words + 1
    return num_words


